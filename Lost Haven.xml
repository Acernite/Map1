<?xml version="1.0"?>
<map proto="1.4.0">
<name>Lost Haven</name>
<version>1.0.0</version>
<objective>Take the opponent's wools and place them on your victory monument!</objective>
<gamemode>ctw</gamemode>
<created>2021-07-13</created>
<authors>
    <author uuid="93a2f790-e430-4742-94ac-e513660bef37"/> <!--  adenines  -->
    <author uuid="787c2738-70ba-4bfc-8faf-70ae9d87e5b9"/> <!--  uracils  -->
</authors>
<teams>
    <team id="orange-team" color="gold" max="50">Purple</team>
    <team id="blue-team" color="blue" max="50">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" material="iron sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true"> 
            <enchantment level="1">infinity</enchantment>
        </item>
        <item slot="2" material="diamond pickaxe" unbreakable="true">
        </item>
        <item slot="3" material="iron axe" unbreakable="true">
            <enchantment level="1">efficiency</enchantment>
        </item>
        <item slot="4" material="bucket" amount="1"/>
        <item slot="6" material="wood" damage="0" amount="48"/>
        <item slot="7" material="golden apple" amount="1"/>
        <item slot="8" material="golden carrot" amount="64"/>
        <item slot="28" material="arrow" amount="1"/>
        <item slot="30" material="iron spade"/>
    </kit>
    <kit id="orange-kit" parents="spawn-kit">
        <item slot="5" material="stained_clay" damage="1" amount="64"/>
        <item slot="32" material="stained_clay" damage="1" amount="64"/>
        <item slot="23" material="stained_clay" damage="1" amount="64"/>
        <item slot="14" material="stained_clay" damage="1" amount="64"/>
        <chestplate material="leather chestplate" color="D87F33" unbreakable="true">
            <enchantment level="2">projectile_protection</enchantment>
        </chestplate>
        <boots material="leather boots" color="D87F33" unbreakable="true">
            <enchantment level="2">projectile_protection</enchantment>
        </boots>
    </kit>
    <kit id="blue-kit" parents="spawn-kit">
        <item slot="5" material="stained_clay" damage="11" amount="64"/>
        <item slot="32" material="stained_clay" damage="11" amount="64"/>
        <item slot="23" material="stained_clay" damage="11" amount="64"/>
        <item slot="14" material="stained_clay" damage="11" amount="64"/>
        <chestplate material="leather chestplate" color="334CB2" unbreakable="true">
            <enchantment level="2">projectile_protection</enchantment>
        </chestplate>
        <boots material="leather boots" color="334CB2" unbreakable="true">
             <enchantment level="2">projectile_protection</enchantment>
        </boots>
    </kit>
</kits>
<spawns>
    <spawn team="orange-team" kit="orange-kit" yaw="0">
        <region>
            <cylinder base="0.5,22,-184.5" radius="1.5" height="0"/>
        </region>
    </spawn>
    <spawn team="blue-team" kit="blue-kit" yaw="180">
        <region>
            <cylinder base="0.5,22,185.5" radius="1.5" height="0"/>
        </region>
    </spawn>
    <default yaw="90">
        <region>
            <cylinder base="79.5,33,0.5" radius="1.5" height="0"/>
        </region>
    </default>
</spawns>
<wools craftable="false">
    <wool team="orange-team" color="light blue" location="114.5,22,152.5">
        <monument><block>2.5,36,-173.5</block></monument>
    </wool>
    <wool team="orange-team" color="cyan" location="0.5,33,111.5">
        <monument><block>0.5,36,-173.5</block></monument>
    </wool>   
    <wool team="orange-team" color="green" location="-113.5,22,152.5">
        <monument><block>-1.5,36,-173.5</block></monument>
    </wool>
    <wool team="blue-team" color="pink" location="-113.5,22,-151.5">
        <monument><block>-1.5,36,174.5</block></monument>
    </wool>                          
    <wool team="blue-team" color="red" location="0.5,33,-110.5">
        <monument><block>0.5,36,174.5</block></monument>
    </wool>
    <wool team="blue-team" color="yellow" location="114.5,22,-151.5">
        <monument><block>2.5,36,174.5</block></monument>
    </wool>
</wools>
<filters>
    <team id="only-orange">orange-team</team>
    <team id="only-blue">blue-team</team>
    <deny id="deny-team-void">
        <void/>
    </deny> 
    <all id="orange-woolroom-filter">
        <team>orange-team</team>
        <material>web</material>
        <region id="orange-woolrooms"/>
    </all>
    <all id="blue-woolroom-filter">
        <team>blue-team</team>
        <material>web</material> 
        <region id="blues-woolrooms"/>   
    </all>
    <material id="only-iron">iron block</material>
    <material id="only-air">air</material>
    <all id="only-renewable">
        <material>iron block</material>  
        <not>
            <cause>player</cause>
        </not>
    </all>
    <any id="spawn-perms">
        <material>leaves</material>
        <filter id="only-renewable"/>
    </any>
</filters>
<regions>
    <!-- main regions -->
    <rectangle id="entire-map" min="-130,195" max="130,-195"/>
    <union id="spawns">
        <rectangle id="blue-spawn" min="-33,165" max="35,199"/>
        <rectangle id="orange-spawn" min="34,-164" max="-34,-199"/>
    </union>
    <!-- woolrooms -->
    <union id="yrp-woolrooms">
        <cylinder id="yellow-woolroom" base="114.5,0,-151.5" radius="9" height="oo"/>
        <cylinder id="red-woolroom" base="0.5,27,-110.5" radius="9" height="oo"/>
        <cylinder id="yellow-woolroom" base="-113.5,0,-151.5" radius="9" height="oo"/>
    </union>
    <union id="lbcg-woolrooms">
        <cylinder id="light-blue-woolroom" base="114.5,0,152.5" radius="9" height="oo"/>
        <cylinder id="cyan-woolroom" base="0.5,27,111.5" radius="9" height="oo"/>
        <cylinder id="green-woolroom" base="-113.5,0,152.5" radius="9" height="oo"/>
    </union>
    <!-- orange's portal destinations -->
    
    <!-- blue's portal destinations -->
    <cuboid id="spawn1" min="2,22,185" max="-1,22,187"/> <!-- blue spawn 1st level -->
    <cuboid id="spawn2" min="2,35,183" max="-1,35,185"/> <!-- blue spawn 2nd level -->
   
    <cuboid id="purple-destination-out" min="-152,18,-1" max="-150,18,2"/> <!-- purple's portal outside -->
    <cylinder id="purple-destination-spawn" base="-227.5,39,0.5" radius="1.5" height="0"/> <!-- purple's portal at spawn -->
    <cuboid id="blue-destination-out" min="97,18,2" max="95,18,-1"/> <!-- blue's portal outside -->
    <cylinder id="blue-destination-spawn" base="172.5,39,0.5" radius="1.5" height="0"/> <!-- blue's portal at spawn -->                         
    <union id="no-build-portal">
        <cuboid id="purple-portal" min="-156,18,4" max="-151,24,-3"/>
        <cuboid id="blue-portal" min="101,18,-3" max="96,24,4"/> 
    </union>                                    
    <!-- woolrooms -->
    <union id="woolrooms">
        <union id="purples-woolrooms">
            <cylinder base="139,0,-37" radius="9.5" height="oo" id="green-woolroom"/>
            <cylinder base="139,0,38" radius="9.5" height="oo" id="cyan-woolroom"/>
        </union>
        <union id="blues-woolrooms">
            <cylinder base="-194,0,38" radius="9.5" height="oo" id="magenta-woolroom"/>
            <cylinder base="-194,0,-37" radius="9.5" height="oo" id="pink-woolroom"/>
        </union>
    </union>
