<?xml version="1.0"?>
<map proto="1.0">
<name>Niflheim</name>
<version>1.0.0</version>
<objective>Take the opponent's wools and place them on your victory monument!</objective>
<gamemode>ctw</gamemode>
<created>2021-06-08</created>
<authors>
    <author uuid="93a2f790-e430-4742-94ac-e513660bef37"/> <!--  adenines  -->
    <author uuid="787c2738-70ba-4bfc-8faf-70ae9d87e5b9"/> <!--  uracils  -->
</authors>
<teams>
    <team id="purple-team" color="dark_purple" max="30">Purple</team>
    <team id="blue-team" color="aqua" max="30">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" material="iron sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true"> 
            <enchantment level="1">infinity"</enchantment>
        </item>
        <item slot="2" material="iron pickaxe" unbreakable="true">
            <enchantment level="1">efficiency</enchantment>
        </item>
        <item slot="3" material="iron axe" unbreakable="true">
            <enchantment level="1">efficiency"</enchantment>
        </item>
        <item slot="4" material="bucket" amount="1"/>
        <item slot="5" material="log" damage="2" amount="64"/>
        <item slot="7" material="golden apple" amount="1"/>
        <item slot="8" material="golden carrot" amount="64"/>
        <item slot="28" material="arrow" amount="1"/>
        <item slot="30" material="iron spade"/>
        <effect duration="oo" amplifier="100">resistance</effect>
        <effect duration="oo" amplifier="1">night_vision</effect>
    </kit>
    <kit force="true" id="reset-resitance-kit">
        <effect duration="0" amplifier="0">damage resistance</effect>
    </kit>
    <kit id="purple-kit" parents="spawn-kit">
        <item slot="6" material="stained_glass" damage="10" amount="64"/>
        <chestplate material="leather chestplate" color="7F3FB2" unbreakable="true">
            <enchantment level="2">projectile_protection</enchantment>
        </chestplate>
        <boots material="leather boots" color="7F3FB2" unbreakable="true">
            <enchantment level="2">projectile_protection</enchantment>
        </boots>
    </kit>
    <kit id="blue-kit" parents="spawn-kit">
        <item slot="6" material="stained_glass" damage="3" amount="64"/>
        <chestplate material="leather chestplate" color="6699D8" unbreakable="true">
            <enchantment level="2">projectile_protection</enchantment>
        </chestplate>
        <boots material="leather boots" color="6699D8" unbreakable="true">
             <enchantment level="2">projectile_protection</enchantment>
        </boots>
    </kit>
</kits>
<spawns>
    <spawn team="purple-team" kit="purple-kit" yaw="-90">
        <region>
            <cylinder base="-227.5,39,0.5" radius="1.5" height="0"/>
        </region>
    </spawn>
    <spawn team="blue-team" kit="blue-kit" yaw="90">
        <region>
            <cylinder base="172.5,39,0.5" radius="1.5" height="0"/>
        </region>
    </spawn>
    <default yaw="180">
        <region>
            <cylinder base="27.5,59,61.5" radius="1.5" height="0"/>
        </region>
    </default>
</spawns>
    
<wools craftable="false">
    <wool team="purple-team" color="green" location="137.5,22,-35.5">
        <monument><block>-219.5,41,-2.5</block></monument>
    </wool>
    <wool team="purple-team" color="cyan" location="137.5,22,36.5">
        <monument><block>-219.5,41,3.5</block></monument>
    </wool>   
    <wool team="blue-team" color="magenta" location="-192.5,22,36.5">
        <monument><block>164.5,41,3.5</block></monument>
    </wool>                          
    <wool team="blue-team" color="pink" location="-192.5,22,-35.5">
        <monument><block>164.5,41,-2.5</block></monument>
    </wool>
</wools>
    
<filters>
    <team id="only-purple">purple-team</team>
    <team id="only-blue">blue-team</team>
    <deny id="deny-team-void">
        <void/>
    </deny> 
    <any id="purple-woolroom-filter">
        <team>purple-team</team>
        <material>web</material>   
        <material>stained_glass:13</material>
        <material>stained_glass:9</material>
    </any>
    <any id="blue-woolroom-filter">
        <team>blue-team</team>
        <material>web</material>
        <material>stained_glass:6</material>
        <material>stained_glass:2</material>
    </any>
    <material id="only-iron">iron block</material>
    <material id="only-air">air</material>
</filters>
        
<regions>
    <!-- build areas -->
    <cuboid id="purple-island" min="-209.5,11,54.5" max="-96.5,oo,-53.5"/> <!-- purple's island -->
    <cuboid id="blue-island" min="41.5,11,-53.5" max="155.5,oo,54.5"/> <!-- blue's island -->
    <rectangle id="middle-islands" min="-95.5,47.5" max="40.5,-46.5"/>  <!-- mid islands -->
    <union id="underneath">
        <cuboid id="purple-island-under" min="-209.5,0,54.5" max="-96.5,10,-53.5"/> <!-- underneath purple's island -->
        <cuboid id="blue-island-under" min="41.5,0,-53.5" max="155.5,10,54.5"/> <!-- underneath blue's island -->
    </union>
    
    <!-- player spawns -->
    <negative id="not-spawns">
        <union id="spawns">
            <cuboid id="purple-spawn" min="-205,0,12" max="-230,50,-12"/>
            <cuboid id="blue-spawn" min="150,0,-12" max="175,50,12"/>
        </union>
    </negative>
    
    <!-- portal spawns -->
    <cuboid id="purple-destination-out" min="-151.5,18,-0.5" max="-150.5,18,1.5"/> <!-- purple's portal outside -->
    <cylinder id="purple-destination-spawn" base="-227.5,39,0.5" radius="1.5" height="0"/> <!-- purple's portal at spawn -->
    <cuboid id="blue-destination-out" min="96.5,18,1.5" max="95.5,18,-0.5"/> <!-- blue's portal outside -->
    <cylinder id="blue-destination-spawn" base="172.5,39,0.5" radius="1.5" height="0"/> <!-- blue's portal at spawn -->                         
    <cuboid id="purple-portal" min="-155.5,18,3.5" max="-151,18,-2.5"/>
    <cuboid id="blue-portal" min="100.5,18,-2.5" max="96.5,18,3.5"/> 
                                        
    <!-- woolrooms -->
    <union id="woolrooms">
        <union id="purples-woolrooms">
            <cylinder base="139,0,-37" radius="9.5" height="oo" id="green-woolroom"/>
            <cylinder base="139,0,38" radius="9.5" height="oo" id="cyan-woolroom"/>
        </union>
        <union id="blues-woolrooms">
            <cylinder base="-194,0,38" radius="9.5" height="oo" id="magenta-woolroom"/>
            <cylinder base="-194,0,-37" radius="9.5" height="oo" id="pink-woolroom"/>
        </union>
    </union>
    
    <!-- applicators -->
    <apply enter="only-purple" region="purples-woolrooms" message="You cannot enter your own wool room!"/>
    <apply enter="only-blue" region="blues-woolrooms" message="You cannot enter your own wool room!"/>
    <apply block-break="purple-woolroom-filter" region="purples-woolrooms" message="You can only break webs and glass in the wool room!"/>
    <apply block-break="orange-woolroom-filter" region="limes-woolrooms" message="You can only break webs and glass in the wool room!"/>
    <apply block-place="never" region="woolrooms" message="You cannot place blocks in the woolrooms!"/>
    <apply enter="only-purple" region="purple-spawn" message="You cannot approach the enemy's spawn island!"/>
    <apply enter="only-blue" region="blue-spawn" message="You cannot approach the enemy's spawn island!"/>
    <apply kit="reset-resitance-kit" region="not-spawns"/> 
    <apply block="deny-team-void" region="purple-island" message="You may not edit the void!"/>
    <apply block="deny-team-void" region="blue-island" message="You may not edit the void!"/>
    <apply block="always" region="middle-islands"/>
    <apply enter="only-purple" region="purple-portal" message="You cannot enter Purple's portal!"/>
    <apply enter="only-blue" region="blue-portal" message="You cannot enter Blue's portal!"/>
    <apply block-break="only-iron" region="spawns" message="You can only break iron in your spawn!"/>
    <apply block="never" region="underneath" message="No underbridge here! :)"/>
</regions>
                                                                                                                                      
<portals>
    <portal> <!--purple portal to outside-->
        <region>
            <cuboid min="-218.5,39,-0.5" max="-218.5,43,1.5"/></region>
        <destination>
            <region id="purple-destination-out"/></destination>
    </portal>
    <portal> <!--purple portal to spawn-->
        <region>
            <cuboid min="-153.5,18,1.5" max="-153.5,22,-0.5"/></region>
        <destination>
            <region id="purple-destination-spawn"/></destination>
    </portal> 
    <portal> <!--blue portal to outside-->
        <region>
            <cuboid min="163.5,39,1.5" max="163.5,43,-0.5"/></region>
        <destination>
            <region id="blue-destination-out"/></destination>
    </portal>
    <portal> <!--blue portal to spawn-->
        <region>
            <cuboid min="98.5,18,-0.5" max="98.5,22,1.5"/></region>
        <destination>
            <region id="blue-destination-spawn"/>
        </destination>      
    </portal>
</portals>

<respawn delay="3s" blackout="true"/>

<renewables>
    <renewable rate="3" sound="true" region="everywhere" renew-filter="only-iron" replace-filter="only-air" avoid-players="2"/>
</renewables>
<itemkeep>
    <item>iron sword</item>
    <item>bow</item>
    <item>iron pickaxe</item>
    <item>iron axe</item>
    <item>birch log</item>
    <item>stained glass</item>
    <item>golden carrot</item>
    <item>arrow</item>
</itemkeep>
<itemremove>
    <item>leather boots</item>
    <item>leather chestplate</item>
    <item>double plant</item>
    <item>stained clay</item>
    <item>chiseled stone brick</item>
    <item>slab</item>
    <item>primsarine</item>
    <item>dark prismarine</item>
    <item>prismarine bricks</item>
</itemremove>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
</toolrepair>
<item-mods>
    <rule>
        <match>
            <material>diamond helmet</material>
            <material>diamond boots</material>
            <material>iron sword</material>
            <material>bow</material>
            <material>shears</material>
            <material>iron helmet</material>
            <material>iron chestplate</material>
            <material>iron leggings</material>
            <material>iron boots</material>
        </match>
        <modify unbreakable="true">
        </modify>
    </rule>
</item-mods>
<maxbuildheight>50</maxbuildheight>
<kill-rewards>
    <kill-reward>
        <item material="golden apple" amount="1"/>
    </kill-reward>
</kill-rewards>
</map>
